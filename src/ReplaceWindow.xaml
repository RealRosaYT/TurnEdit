<Window x:Class="TurnEdit.ReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TurnEdit"
        mc:Ignorable="d"
        Title="Replace" Height="310" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="What to replace" Margin="10" FontSize="15" />
        <TextBox x:Name="whatToReplace" Margin="10" FontSize="15"></TextBox>
        <TextBlock Text="Replace destination" Margin="10" FontSize="15" />
        <TextBox x:Name="replaceDestination" Margin="10" FontSize="15"></TextBox>
        <StackPanel Orientation="Horizontal">
            <Button Content="Replace" Margin="10" x:Name="replaceButton" Click="replaceButton_Click" />
            <Button Content="Cancel" Margin="10" x:Name="cancelReplaceButton" Click="cancelReplaceButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
