<Window x:Class="TurnEdit.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TurnEdit"
        mc:Ignorable="d"
        Title="Search" Height="195" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="Search text" Margin="10" FontSize="15" />
        <TextBox Margin="10" x:Name="searchText" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Search" Width="100" Margin="10" x:Name="searchButton" Click="searchButton_Click" />
            <Button Content="Cancel" Width="100" Margin="10" x:Name="closeSearch" Click="closeSearch_Click" />
        </StackPanel>
    </StackPanel>
</Window>
